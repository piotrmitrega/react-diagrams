{
	"compileOnSave": false,
	"compilerOptions": {
		"suppressExcessPropertyErrors": true,
		"strictNullChecks": false,
		"sourceMap": true,
		"skipLibCheck": true,
		"jsx": "react",
		"target": "ES6",
		"module": "commonjs",
		"strict": false,
		"lib": [
			"DOM",
			"ES6"
		],
		"declaration": true,
		"outDir": "dist/es/",
		"declarationDir": "dist/@types",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true
	},
	"include": [
		"./src"
	],
	"exclude": [
		"demos",
		"node_modules",
		"**/*.spec.ts",
		"./dist"
	]
}
